extends layout

block content  
  #topnavW 
    img(src="/images/favicon.png")
    #logo 
      span.header HyperData.js
      span.subHeader Metadata management with JSON tables (Apache 2.0)
    #buttonsW 
      #buttonsC 
        //- .button#json 
        //-   i.fal.fa-brackets-curly
        //-   span JSON
        a(target="_blank" href="https://github.com/RonItelman/hyperdatajs").button#code 
          i.fab.fa-github
          span GET
  #contentW
    include ./rightPane.pug
    #metaW 
      #metaC
        #meta(data-focused="true")
          .name 
            input(placeholder="Table name (ex: Pets)")
          .description 
            input(placeholder="Table name (ex: Animals adopted by humans)")
    #tableW
      #tableC 
        #table
          table 
            thead 
              tr 
                th(data-line_num="2" data-field_num="0" data-focused="false") col1 
                th(data-line_num="3" data-field_num="0" data-focused="false") col2 
                th(data-line_num="4" data-field_num="0" data-focused="false") col3
            tbody 
              tr 
                td(data-focused="false" data-line_num="2", data-field_num="2") val1
                td(data-focused="false" data-line_num="3", data-field_num="2") val2
                td(data-focused="false" data-line_num="4", data-field_num="2") val2

